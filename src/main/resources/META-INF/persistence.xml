<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

    <persistence-unit name="PERSISTENCE" transaction-type="RESOURCE_LOCAL">
        <description>JPA Configuration</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>net.therap.onlinedoctorbookingmanagement.domain.User</class>
        <class>net.therap.onlinedoctorbookingmanagement.domain.Specialty</class>
        <class>net.therap.onlinedoctorbookingmanagement.domain.Doctor</class>
        <class>net.therap.onlinedoctorbookingmanagement.domain.Patient</class>
        <class>net.therap.onlinedoctorbookingmanagement.domain.Appointment</class>
        <class>net.therap.onlinedoctorbookingmanagement.domain.AppointmentScheduleGenerator</class>
        <class>net.therap.onlinedoctorbookingmanagement.domain.Role</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/final"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>